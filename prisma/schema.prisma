// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

// Note that some adapters may set a maximum length for the String type by default, please ensure your strings are long
// enough when changing adapters.
// See https://www.prisma.io/docs/orm/reference/prisma-schema-reference#string for more information
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Auth {
  // primary
  id String @id @default(uuid()) @db.Uuid

  // shop/display details
  shop String // e.g. myshop.example.com

  // provider-specific configuration
  googleConfig String? @db.Text // store Google developer project encrypted JSON-String
  bingApiKey   String? // URL used for Bing Indexing API

  // flexible fields
  settings Json // per-integration settings (retry, rate-limits, etc.)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([shop])
  @@index([shop])
}

model UrlEntry {
  id String @id @default(uuid()) @db.Uuid

  // Shop context
  shop   String
  baseId BigInt

  // URL identity
  webUrl String @db.Text

  // Indexing control
  indexAction IndexAction @default(INDEX)
  status      UrlStatus   @default(PENDING)
  attempts    Int         @default(2)

  // Timing
  submittedAt   DateTime  @default(now())
  lastEventAt   DateTime  @updatedAt // webhook activity
  lastTriedAt   DateTime?
  lastIndexedAt DateTime  @default(now())

  // Flexible metadata
  metadata Json?

  // Constraints & indexes
  @@unique([shop, webUrl])
  @@unique([shop, baseId])
  @@index([shop])
  @@index([status])
  @@index([indexAction])
  // New performance-focused ordered indexes
  @@index([lastIndexedAt(sort: Asc), attempts(sort: Asc)])
  // Often better in practice if you also filter by shop/status
  @@index([shop, status, lastIndexedAt(sort: Asc), attempts(sort: Asc)])
}

model IndexTask {
  id          BigInt    @id @default(autoincrement()) @db.BigInt
  shop        String
  url         String
  isCompleted Boolean   @default(false)
  createdAt   DateTime  @default(now()) @db.Timestamptz
  completedAt DateTime? @db.Timestamptz

  @@unique([shop, url])
  @@index([shop, isCompleted])
}

enum UrlStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
}

enum IndexAction {
  INDEX // submit/update
  DELETE // remove from index
  IGNORE // do nothing
}

model Session {
  id                  String    @id
  shop                String
  state               String
  isOnline            Boolean   @default(false)
  scope               String?
  expires             DateTime?
  accessToken         String
  userId              BigInt?
  firstName           String?
  lastName            String?
  email               String?
  accountOwner        Boolean   @default(false)
  locale              String?
  collaborator        Boolean?  @default(false)
  emailVerified       Boolean?  @default(false)
  refreshToken        String?
  refreshTokenExpires DateTime?
}

model ShopFeatureStates {
  id   BigInt @id @default(autoincrement())
  shop String @unique

  // JSON objects for each page
  home               Json @default("{}")
  urlSubmission      Json @default("{}")
  pricing            Json @default("{}")
  settings           Json @default("{}")
  submissionsHistory Json @default("{}")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([shop])
}
